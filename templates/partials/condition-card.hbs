<section class="item condition" data-item-id="{{_id}}">
  <div>
    <span class="large title">
      <a class="condition-toggle check-box{{#if data.checked}} filled{{/if}}"></a>
      <span class="menu">{{name}}</span>
    </span>
  </div>
  {{#unless npc}}
  {{{data.description}}}
  {{/unless}}
</section>