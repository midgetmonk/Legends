<h1 class="title row item" data-item-id="{{_id}}">
  {{localize "legends.actor-sheet.principle"}}:
  <section class="cell cell-3">
    &nbsp;<a class="menu black">{{name}}</a>
  </section>

  <section class="track cell cell-2">
    {{#times data.track.max}}
      <a class="check-box set-value{{#if (gte ../data.track.value @index)}} filled{{/if}}" data-type="item" data-param="track" data-new-value="{{@index}}">
        <span class="num">
          +{{@index}}
        </span>
      </a>
    {{/times}}
  </section>
</h1>