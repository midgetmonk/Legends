<form class="legends sheet item-sheet technique-sheet {{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <h1 class="title">
      <input name="name" type="text" value="{{item.name}}" placeholder="Name" class="editable" />
    </h1>
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
  </header>
  <div>
    <section class="approach-basic">
      <table>
        <tr>
          <th class="title">{{localize "legends.techniques.basic"}}</th>
          <th class="title">{{localize "legends.techniques.approach"}}</th>
        </tr>
        <tr>
          <td>
            {{> "systems/legends/templates/partials/checkbox.hbs" name="system.basic" value=data.system.basic}}
          </td>
          <td>
            <select name="system.approach">
              {{#select data.system.approach}}
                {{#each config.approaches as |name type|}}
                  <option value="{{type}}">{{localize name}}</option>
                {{/each}}
              {{/select}}
            </select>
          </td>
        </tr>
        <tr>
          <th class="title">{{localize "legends.actor-sheet.player.training"}}</th>
          <th class="title">{{localize "legends.training.specialty"}}</th>
        </tr>
        <tr>
          <td>
            <select name="system.training">
              <option value="">{{localize "legends.training.none"}}</option>
              {{#select data.system.training}}
                {{#each config.training as |name type|}}
                  <option value="{{type}}">{{localize name}}</option>
                {{/each}}
              <option value="group">{{localize "legends.training.group"}}</option>
              {{/select}}
            </select>
          </td>
          <td>
            <input type="text" name="system.specialty" value="{{data.system.specialty}}" />
          </td>
        </tr>
      </table>
    </section>

    {{> "systems/legends/templates/partials/description-editor.hbs" }}
  </div>
</form>
